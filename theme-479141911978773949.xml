      font-family: &#39;Pacifico&#39;, cursive;
    }

    .generator {
      margin-top: 50px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .input-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
    }

    input[type=&quot;text&quot;] {
      padding: 10px;
